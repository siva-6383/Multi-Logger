<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
    <Property name="log-path">D:\logtest\</Property>
</Properties>
<Appenders>

    <!-- console appender -->
    <Console name="console-log" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n"/>
    </Console>

    <!-- file appender -->
    <RollingFile name="trace" fileName="${log-path}/trace.log"
                 filePattern="${log-path}/trace-%d{yyyy-MM-dd-HH}.log">
        <!-- log pattern -->
        <PatternLayout>
            <pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
        </PatternLayout>

        <!-- set file size policy -->
        <Policies>
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            <!-- <SizeBasedTriggeringPolicy size="10 MB" /> -->
        </Policies>
        <DefaultRolloverStrategy max="500"/>
    </RollingFile>
	
	 <RollingFile name="report" fileName="${log-path}/trace.log"
                 filePattern="${log-path}/trace-%d{yyyy-MM-dd-HH}.log">
        <!-- log pattern -->
        <PatternLayout>
            <pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
        </PatternLayout>

        <!-- set file size policy -->
        <Policies>
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            <!-- <SizeBasedTriggeringPolicy size="10 MB" /> -->
        </Policies>
        <DefaultRolloverStrategy max="500"/>
    </RollingFile> 
	<!-- file appender -->
		<RollingFile name="logsiva"
			fileName="${log-path}/logsiva.log"
			filePattern="${log-path}/logsiva-%d{yyyy-MM-dd-HH}.log">
			<!-- log pattern -->
			<PatternLayout>
				<pattern>%d{dd/MM/yyyy HH:mm:ss:SSS} %5p - %m%n</pattern>
			</PatternLayout>

			<!-- set file size policy -->
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
				<!-- <SizeBasedTriggeringPolicy size="10 MB" /> -->
			</Policies>
			<DefaultRolloverStrategy max="2500" />
		</RollingFile>

</Appenders>

<Loggers>
	<Logger name="Dialog.Designer.TraceWriter" level="debug" additivity="false">
	    <appender-ref ref="trace"/>>
<!--	    <appender-ref ref="console-log"/>-->
	</Logger>
	<Logger name="logsiva" level="debug" additivity="false">
			<appender-ref ref="logsiva" />
			<appender-ref ref="console-log" />
		</Logger>
	<Logger name="Dialog.Designer.ReportWriter" level="debug" additivity="false">
	    <appender-ref ref="report"/>
<!--	    <appender-ref ref="console-log"/>-->
	</Logger>
	<Root level="debug" additivity="false">
<!--        <AppenderRef ref="console-log"/>-->
    </Root>
</Loggers>
</Configuration>
